<view class="i-class i-avatar i-avatar-{{ shape }} i-avatar-{{ size }} {{ src ? 'i-avatar-image' : '' }}" bindtap="handleTap">
  <image class="image" src="{{ src }}" wx:if="{{ src !== '' }}" style='background-color:#ccc'></image>
  <view class="i-avatar-string" wx:else>
    <slot></slot>
  </view>
</view>