<view class='up-img add-position box box-row-start-wrap'>
  <view class='img-block add-position mr-2 mb-2' wx:for="{{imgList}}" wx:key="id">
    <image class='small-img add-position' src='{{BASEURL + item.path}}' mode="aspectFill" data-index='{{index}}' catchtap='seeImg'></image>
    <view class="del-btn" data-index='{{index}}' src="{{IMAGEURL}}up_del.png" catchtap='delImg'>
      Ã—
    </view>
    <view class='error-see' wx:if="{{item.error}}">
      <i-icon type="prompt-fill" size="28" color="red" />
    </view>
  </view>
  <view class='up-img-block box box-row-center mr-2 mb-2' bindtap='setImg' wx:if="{{imgList.length<maxLength}}">
    <i-icon type="camera_fill" size="32" color="#999" />
  </view>
</view>