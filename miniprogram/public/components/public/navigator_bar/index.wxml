<view style="{{bgColor?'background:'+bgColor:''}}" class="{{fixed?'fixed':'sticky'}}">
  <view class="status-bar" style="height: {{(statusBarHeight / pixelRate) + 'rpx'}}"></view>
  <view class="capsule-line" style="height: {{(capsuleHeight / pixelRate) + 'rpx'}};line-height: {{(capsuleHeight / pixelRate) + 'rpx'}}">
    <view class="left-box">
      <slot name="leftBtn"></slot>
    </view>
    <view class="content-box">
      <slot name="center"></slot>
    </view>
    <view class="right-box"></view>
  </view>
</view>
<view class="" style="height: {{((statusBarHeight+capsuleHeight) / pixelRate) + 'rpx'}};{{bgColor?'background:'+bgColor:''}}" wx:if="{{fixed}}"></view>