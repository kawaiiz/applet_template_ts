<wxs src="./table.wxs" module="table" />
<view class="list">
  <view class="tr box tr-th">
    <view class="th select" hidden="{{!select}}"></view>
    <view class="th" style="width:{{table.computedTdWidth(columns,select)}};{{index===columns.length-1?'flex-grow:1;flex-shrink:1':''}}" wx:for="{{columns}}" wx:key="key">
      {{item.title}}
    </view>
  </view>
  <scroll-view class="scroll-view" scroll-y scroll-top="{{scrollTop}}" style="height:{{scrollViewHeight}}" bindscrolltolower="handleScrolltolower" bindscrolltoupper="handleScrolltoupper" hidden="{{showTipImage}}" lower-threshold="{{100}}">
    <my-tr bindclicklistitem="handleClickListItem" bindclickaction="handleClickAction" bindcheckkey="handleClickCheck" wx:for="{{showDataList}}" wx:key="row_key" rowKey="{{rowKey}}" columns="{{columns}}" item="{{item}}" index="{{index}}" select="{{select}}" checked="{{checkObj[item[rowKey]]}}" isExpand="{{isExpand}}" expandValueKey="{{expandValueKey}}" initExpandValue="{{initExpandValue}}" generic:action-td="action-td"></my-tr>
    <i-load-more tip="{{getListLoading?'请求中':'暂无更多数据'}}" loading="{{ getListLoading }}" />
  </scroll-view>
  <view class="tip-image-block box box-col-center" style="height:{{scrollViewHeight}}" hidden="{{!showTipImage}}">
    <image class="icon" src="../../../img/error.png" />
    <view class="title">{{tipTitle}}</view>
    <view class="subtitle">{{tipSubtitle}}</view>
  </view>
</view>