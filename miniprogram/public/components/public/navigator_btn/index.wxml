<view class="nav-btn-box" wx:if="{{type==='all'}}">
  <view class="capsule" style=" border:1rpx solid {{color}};">
    <navigator class="icon" open-type="navigateBack" delta="1" wx:if="{{showLeft}}">
      <i-icon type="return" size="24" color="{{color}}"></i-icon>
    </navigator>
    <view class="line" style="border-right: 1rpx solid {{color}};" wx:if="{{showLeft&&showRight}}"></view>
    <navigator class="icon" open-type="switchTab" url="{{homepage}}" wx:if="{{showRight}}">
      <i-icon type="homepage_fill" size="24" color="{{color}}"></i-icon>
    </navigator>
  </view>
</view>
<view class="nav-btn-box other" wx:else>
  <navigator class="icon" open-type="navigateBack" delta="1" wx:if="{{showLeft}}">
    <i-icon type="return" size="24" color="{{color}}"></i-icon>
  </navigator>
</view>